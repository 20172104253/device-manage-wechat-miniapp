/* pages/myDevices/myDevices.wxss */

.margin-top40 {
  top: 40px;
}
.kind-list__item {
  margin: 10px 0;
  background-color: #fff;
  border-radius: 1px;
  overflow: hidden;
}


.label{
  padding-left:4px;
  padding-right:4px;
  text-align: center;

}

.status-base {
  text-align: center;
  /* background-color: rebeccapurple; */
  margin-right:16px;
  font-size:12px;
  color:red;
  width:40px;
}
.status-borrowed {
  color:black;
}

.status-returning {
  color:goldenrod;
}

.status-borrowing {
  color:goldenrod;
}

.status-normal {
  color:green;
}
.item-logo {
  width:20px;
  height:20px;
}
.item-base {
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 40px;
  background-color: white;
  margin:2px;
  box-shadow: 0 2px 5px #ccc;
  color:#333333;
}

.empty-base {
  margin-top:40px;
  display:flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}
.empty-image {
  width: 100px;
  height:100px;
}
.empty-desc {
  color:#999;
  margin-top:20px;
}

.empty-hide {
  display: none;
}

.empty-show {
  display: flex;
}
