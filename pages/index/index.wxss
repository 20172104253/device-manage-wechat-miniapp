/*<!--map模块-->*/
.map {
  width: 100%;
  height: 100%;
}

.cneter-locate-market {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  left:50%;
  margin-top:-40rpx;
  margin-left:-40rpx;
  /* background-color: rebeccapurple; */
}

 /*<!--newm模块-->*/
.menu {
  width: 750rpx;
  height: 100rpx;
   background-color: #fff; 
  /* background-color:  */
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  box-shadow: 0 2px 5px #ccc;
  line-height: 100rpx;
}
.menu .avatar {
  float: left;
  display: block;
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  margin: 20rpx 10rpx 0 20rpx;
}
.menu .vertical-line {
  float: left;
  background-color: #eeeeee;
  display: block;
  height: 40rpx;
  width: 3rpx;
}

.menu .search-text {
   /* background-color: rebeccapurple;  */
  color: #666666;
  font-size: 30rpx;
  line-height: 100rpx;
}
.menu .line-left{
  float: left;
  margin: 30rpx 20rpx 0 10rpx;
}

.menu .line-right{
  float: right;
  margin: 30rpx 10rpx;

}

.canvas-shadow {
  background-color: red;
  width: 100rpx;
  height: 200rpx;
}

.menu .more{
  /* background-color: red;  */
  float: right;
  margin: 30rpx 20rpx;
  height: 40rpx;
  width: 40rpx;
}