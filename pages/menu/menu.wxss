/* pages/menu/menu.wxss */

.weui-grids {  
  position: relative;  
  overflow: hidden;
  width: 100%; 
}  

.weui-grid {  
  position: relative;  
  float: left;  
  padding: 20px 10px;  
  width: 33.33333333%;  
  box-sizing: border-box;  
}  


.weui-grid__icon {  
  width: 32px;  
  height: 32px;  
  margin: 0 auto;  
}  
.weui-grid__icon image {  
  display: block;  
  width: 100%;  
  height: 100%;  
}  
.weui-grid__icon + .weui-grid__label {  
  margin-top: 5px;  
}  
.weui-grid__label {  
  display: block;  
  text-align: center;  
  height: 40rpx;
  color: #333333;  
  font-size: 24rpx;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
  overflow: hidden;  
} 