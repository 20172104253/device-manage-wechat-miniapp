/* pages/myDevices/myDevices.wxss */

.margin-top40 {
  top: 40px;
}
.kind-list__item {
  margin: 10px 0;
  background-color: #fff;
  border-radius: 1px;
  overflow: hidden;
}


.label{
  border:1px solid #eee;
  border-radius:2px;
  background-color:#eee;
  padding-left:2px;
  padding-right:2px;
  margin-left:8px;
  text-align: center; 
}

.status-base {
  text-align: center;
  /* background-color: rebeccapurple; */
  margin-right:16px;
  font-size:12px;
  color:red;
  width:40px;
}
.status-borrowed {

  color:black;

}
.status-borrowing {
  color:goldenrod;
}

.status-normal {
  color:green;
}
.item-base {
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 40px;
  background-color: white;
  margin:2px;
  box-shadow: 0 2px 5px #ccc;
  color:#333333;
}

.empty-base {
  margin-top:40px;
  display:flex;
  flex-direction:column;
  align-items: center;
  justify-content: center;
  overflow: hidden;

}

.empty-hide {
  display: none;
}

.empty-show {
  display: flex;
}
